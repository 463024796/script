#!/bin/sh
#Update Shadowsocks-libev
cd shadowsocks-libev
make distclean
git pull
git submodule update --init --recursive
./autogen.sh && ./configure && make -j$CPU_NUM
if [ $SUDO = yes ]; then
unencrytedpasswd
echo $PASSWD | sudo -S make install
encrytedpasswd
elif [ $SUDO = no ]; then
make install
fi
cd ..
